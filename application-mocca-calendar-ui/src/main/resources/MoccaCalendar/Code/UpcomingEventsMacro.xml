#set ($dayFormatter = $xwiki.jodatime.getDateTimeFormatterForPattern('d').withLocale($xcontext.locale))
#set ($monthFormatter = $xwiki.jodatime.getDateTimeFormatterForPattern('MMM').withLocale($xcontext.locale))
#set ($wikiList = [])
#set ($wikis = "$!wikimacro.parameters.wikis")
#if ($wikis != '')
  #foreach ($wikiId in $wikis.split(','))
    #set ($discard = $wikiList.add($wikiId.trim()))
  #end
#else
  #set ($discard = $wikiList.add($xcontext.wiki))
#end
#set ($events = $services.moccacalendar.queryEvents($startDate.toDate(), $endDate.toDate(), $wikiList, 1))
(% class="moccacal-event-list" %)(((
  #foreach ($event in $events)
    #if ($wikimacro.parameters.limit &gt; 0 &amp;&amp; $foreach.count &gt; $wikimacro.parameters.limit)
      #break
    #end
    #set ($dateTimeInfo = "$dateTimeFormatter.print($event.getStartDate()) - $dateTimeFormatter.print($event.getEndDate())")
    #set ($startDay = $datetool.toDays($event.getStartDate().toDate()))
    #set ($endDay = $datetool.toDays($event.getEndDate().toDate()))
    #if ($startDay == $endDay)
      #if (!$event.isAllDay())
        #set ($dateTimeInfo = "$timeFormatter.print($event.getStartDate()) - $timeFormatter.print($event.getEndDate())")
      #else
        #set ($dateTimeInfo = $dayFormatter.print($event.getStartDate()))
      #end
    #elseif ($event.isAllDay())
      #set ($dateTimeInfo = "$dateFormatter.print($event.getStartDate()) - $dateFormatter.print($event.getEndDate())")
    #end
    (% class="moccacal-event" %)(((
      (% class="moccacal-event-date" %)(((
        (% class="moccacal-event-day" %)(((
          $dayFormatter.print($event.getStartDate())
        )))
        (% class="moccacal-event-month" %)(((
          $monthFormatter.print($event.getStartDate())
        )))
      )))
      (% class="moccacal-event-info" %)(((
        (% class="moccacal-event-title" %)(((
          [[$services.rendering.escape($services.rendering.escape($event.getTitle(), 'xwiki/2.1'), 'xwiki/2.1')&gt;&gt;$services.rendering.escape($event.getEventDocRef(), 'xwiki/2.1')]]
        )))
        (% class="moccacal-event-schedule" %)(((
          $services.icon.render('calendar') $dateTimeInfo
        )))
      )))
    )))
